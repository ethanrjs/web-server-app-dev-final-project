<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="WSAD Final Project - A game review library" />
    <title>@ViewData["Title"] - WSAD Final / Game Library</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@300;400;500;600;700&family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- skip to main content link for keyboard users
    common practice in accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- header for the website, contains the logo and navigation and whatnot-->
    <header class="header" role="banner">
        <div class="container">
            <div class="header-inner">
                <a asp-controller="Home" asp-action="Index" class="logo" aria-label="WSAD Final - Home">
                    <span class="logo-icon" aria-hidden="true">W</span>
                    <span class="logo-text">
                        <span class="logo-main">WSAD</span>
                        <span class="logo-sub">Final</span>
                    </span>
                </a>

                <nav class="nav" role="navigation" aria-label="Main navigation">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Library</a>
                    <a asp-controller="Games" asp-action="Index" class="nav-link">Games</a>
                    <a asp-controller="Home" asp-action="About" class="nav-link">About</a>
                    <a asp-controller="Home" asp-action="Collections" class="nav-link">Collections</a>
                    <a asp-controller="Home" asp-action="Team" class="nav-link">Team</a>
                </nav>
            </div>
        </div>
    </header>

    <!-- main content of the website, bread and butter goes here -->
    <main id="main-content" role="main">
        @RenderBody()
    </main>

    <!-- footer containing the "copyright" (lol) and team members -->
    <footer class="footer" role="contentinfo">
        <div class="container">
            <div class="footer-inner">
                <span class="footer-copy">WSAD Final Project</span>
                <nav class="footer-links" aria-label="Team members">
                    <a asp-controller="Home" asp-action="EthanR" class="footer-link">Ethan R</a>
                    <a asp-controller="Home" asp-action="EllaS" class="footer-link">Ella S</a>
                    <a asp-controller="Home" asp-action="EthanG" class="footer-link">Ethan G</a>
                </nav>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
